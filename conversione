<body>
  <h2>convertitore</h2>

  <input type="number" id="num1" min="0" max="255" placeholder="0-255">
  <input type="number" id="num2" min="0" max="255" placeholder="0-255">
  <input type="number" id="num3" min="0" max="255" placeholder="0-255">
  <input type="number" id="num4" min="0" max="255" placeholder="0-255">
  
  <br><br>
  <button onclick="converti()">Converti</button>

  <h3>Risultato:</h3>
  <p id="risultato"></p>

  <script>
    function converti() {
      let numeri = [
        document.getElementById("num1").value,
        document.getElementById("num2").value,
        document.getElementById("num3").value,
        document.getElementById("num4").value
      ];

      let binari = "";

      for (let i = 0; i < numeri.length; i++) {
        let n = parseInt(numeri[i]);

        if (isNaN(n) || n < 0 || n > 255) {
          binari += "Errore ";
        } else {
          let bin = n.toString(2).padStart(8, "0");
          binari += bin + " ";
        }
      }

      document.getElementById("risultato").innerText = binari;
    }
  </script>
</body>
